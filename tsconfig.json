{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": ["es6", "es7", "dom"],
		"outDir": "dist",
		"rootDirs": [".", "src"],
		"declaration": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"inlineSources": true,
		"experimentalDecorators": true,
		"strictNullChecks": true
	},
	"files": [
		"src/index.ts"
	],
	"filesGlob": [
		"*.ts",
		"**/*.ts"
	],
	"atom": { "rewriteTsConfig": true },
	"compileOnSave": false
}
